<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="testwizard_form_view" model="ir.ui.view">
            <field name="name">sec.testwizard.wizard</field>
            <field name="model">sec.testwizard</field>
            <field name="arch" type="xml">
                <form string="المواعيد">
                    <sheet>
                        <group >
                                <field name="person_id" />
                        </group>
                            <group>
                                <field name="date"/>
                            </group>
                    </sheet>
                    <footer>
                        <button  name="create_person" string="اضافة" class="btn-primary" type="object"/>
                        <button  special="Cancel" string="الغاء" class="btn-secondary" />
                    </footer>
                </form>
            </field>
        </record>
        <record id="testwizard_act_window" model="ir.actions.act_window">
            <field name="name">المواعيد</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sec.testwizard</field>
            <field name="view_mode">tree,form</field>
            <field name="target">new</field>
            <field name="view_id" ref="testwizard_form_view"/>
        </record>

    </data>
</odoo>